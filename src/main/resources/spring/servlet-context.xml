        <!--<mvc:interceptor>-->
            <!--<mvc:mapping path="/*" />-->
            <!--<bean class="com.config.interceptor.LoginInterceptor"></bean>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->
</beans>